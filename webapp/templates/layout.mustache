<html>
  <head>
    <style type="text/css">
      body {
        background-color: #eee;
        font-family: sans-serif;
        width: 100%;
        position: relative;
      }
      
      #taglist {
        list-style-type: none;
        text-align: center;
        padding-top: 160px;
        font-size: 64pt;
      }
      
      .result {
        background-color: white;
        border-radius: 0.5em;
        box-shadow: 1px 1px 3px rgb(82%, 82%, 82%);
        padding: 0.5em;
        margin-bottom: 1em;
      }
      
      .date {
        font-size: 70%;
        margin-bottom: 1em;
      }
      
      .author {
        display: block;
        background: #f39;
        vertical-align: middle;
        padding: 0.25em 1em;
        border-radius: 32px;
        color: white;
        font-weight: bold;
        width: 100px;
        margin-bottom: 0.5em;
        text-shadow: 1px 1px 1px #603;
        box-shadow: 1px 1px 1px #906;
        
        background-image: linear-gradient(bottom, #C242A4 40%, #D680C3 70%);
        background-image: -o-linear-gradient(bottom, #C242A4 40%, #D680C3 70%);
        background-image: -moz-linear-gradient(bottom, #C242A4 40%, #D680C3 70%);
        background-image: -webkit-linear-gradient(bottom, #C242A4 40%, #D680C3 70%);
        background-image: -ms-linear-gradient(bottom, #C242A4 40%, #D680C3 70%);

        background-image: -webkit-gradient(
        	linear,
        	left bottom,
        	left top,
        	color-stop(0.4, #C242A4),
        	color-stop(0.7, #D680C3)
        );
        color: white !important;
        text-decoration: none !important;
      }
      
      .author img {
        vertical-align: middle;
      }
      
      a img {
        border: none;
      }

      #content {
        margin-right: 23em;
      }
      
      h2 {
        margin-top: 0.25em;
      }
      
      #sidebar {
        width: 20em;
        height: 100%;
        background: rgb(82%, 82%, 82%);
        color: white;
        padding: 1em;
        border-radius: 0.5em;
        position: absolute;
        right: 0px;
      }
      
      #homelink {
        float: right;
        margin-right: 2em;
      }
      
    </style>
    {{#title}}
    <title>{{to_s}}</title>
    {{/title}}
  </head>
  <body>
    {{#title}}
    {{#homelink}}
      <a id="homelink" href="/">&laquo; Back home</a>
    {{/homelink}}
    <h1>{{title}}</h1>
    {{/title}}
    <div id="sidebar">the side</div>
    <div id="content">
    {{{yield}}}
    </div>
  </body>
</html>